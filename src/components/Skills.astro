    {
        title: "PYTHON",
        Icon: PythonIcon,
    },
    /*{
        title: "DJANGO",
        Icon: DjangoIcon,
    },*/
    {
        title: "MICROPYTHON",
        Icon: MicroIcon,
    },
    {
        title: "ARDUINO",
        Icon: ArduinoIcon,
    },
    {
        title: "ESPHOME",
        Icon: EsphomeIcon,
