---

{
    SKILLS.map(({title, Icon}) => (
            
    <div class="flex justify-center items-center hover:scale-110 hover:bg-white/1 transition">
     <Icon class="size-7 lg:size-9 "/>
     <p class="text-[12px] px-[3px] font-bold">{title}</p>

    </div>
    ))

}
