---
const PROJECTS = [
    {
        title: 'Solar Personal App',
        description: 'Web App to dimension domestic solar system',
        link: "https://solarpersonal.web.app",
        github: "https://github.com/appjava",
        image: "public/projects/SolarApp.webp",
        tags: ["Solar", "App", "Energy"]
    },
    {
        title: 'EchoHome',
        description: 'Personal Blog for ecology and domotic style life',
        link: "https://echoprojects3d.web.app/",
        github: "https://github.com/appjava",
        image: "public/projects/EchoHomeSpace.webp",
        tags: ["Domotic", "Ecology", "Sustainable"]
    },
]
---

{
    PROJECTS.map(({ title, description, tags, image, link}) => (
        <article class="mt-12">
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">
                {title}
            </h3>
            <p class="text-lg mb-4 text-pretty">
                {description}
            </p>
            <ul>
                {tags.map(tag =>(
                    <li>{tag}</li>
                ))}
            </ul>
            <a href={link} target="_blank">
            <img 
                class="rounded shadow-2xl shadow-white/15"
                src={image} 
                alt='Project Screenshot {image}' />
            </a>
        </article>
    ))
}

