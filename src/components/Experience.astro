---
import More from '../components/More.astro';
import JsIcon from '../icons/Js.astro';
import HtmlIcon from '../icons/Html.astro';
import CssIcon from '../icons/Css.astro';
import NodeIcon from '../icons/Node.astro';
import AstroIcon from '../icons/AstroIcon.astro';
import PythonIcon from '../icons/Python.astro';
import TailIcon from '../icons/Tail.astro';
import ReactIcon from '../icons/React.astro';
import BootIcon from '../icons/Boot.astro';
import DjangoIcon from '../icons/Django.astro';
import ArduinoIcon from '../icons/Arduino.astro';
import EsphomeIcon from '../icons/Esphome.astro';
import EspIcon from '../icons/Esp.astro';
import MicroIcon from '../icons/Micro.astro';
import BlenderIcon from '../icons/Blender.astro';


const EXPERIENCIE = [
    {
        date: 'At the moment',
        title: 'Creating web applications and Internet of Things (IoT) prototypes for renewable energy management.',
        description: 'Home automation for the residential sector and the agro-industry',
        link: "#projects",
        tags: ["Arduino", "ESP32", "MicroPython", "ESP8266", "ESP01"],
        Icons: [ArduinoIcon, EsphomeIcon, MicroIcon, PythonIcon, EspIcon, BlenderIcon, DjangoIcon]
    },
    {
        date: 'April 2023',
        title: 'Online Store - PlantaZula',
        description: 'Exhibition and sale of green products, plants and handicrafts',
        link: "https://plantazula.pages.dev",
        tags: ["LocalStorage", "Cart", "Form"],
        Icons: [HtmlIcon, CssIcon, JsIcon, NodeIcon]
    },
    {
        date: 'June 2022',
        title: 'Landing Page - EchoGroup',
        description: 'EchoGroup project launch',
        link: "https://echogroup.pages.dev",
        tags: ["Transitions", "Internationalize"],
        Icons: [ReactIcon, TailIcon]
    },
    {
        date: 'January 2022',
        title: 'Engineering Services Portfolio - IngJAVA',
        description: 'Curriculum Vitae of Hydromechanical Engineering Projects',
        link: "https://ingjava.web.app",
        tags: ["Engineering", "Simulation", "CAE"],
        Icons: [AstroIcon, BootIcon]
    },
]
---

<ol class="relative border-s border-gray-200 ml-3"> 
{
    EXPERIENCIE.map(({date, title, description, link}) => (
                <li class="mb-10 ms-4">
                     <div 
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time 
    class="mb-1 text-sm font-normal leading-none text-sky-100/80"
    >{date}</time>
<a href={link} ><h3 
    class="text-lg font-semibold text-yellow-200 mt-3"
    >{title}</h3></a>
<p 
    class="mb-4 text-base font-normal text-gray-200 text-pretty"
    >{description}</p>
	
<a href={link} ><More>View +</More></a>

    </li>
    
    ))

}
</ol>